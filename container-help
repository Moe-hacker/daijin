#!/data/data/com.termux/files/usr/bin/bash
#########用于容器帮助信息#########
echo -e "\033[31m脚本配置："
echo -e "  配置文件位于/data/data/com.termux/files/usr/etc/container.conf"
echo -e "  CHROOT_IMG=容器镜像的绝对路径，如果不使用镜像文件可不填"
echo -e "  CHROOT_DIR=容器的绝对路径(或挂载点)"
echo -e "  SELINUX=[y/n] 是否关闭SELinux，不建议关闭，会使手机变得不安全，但是由于安卓系统的读取限制，在容器中普通用户可能无法正常使用，此时可通过关闭SELinux(临时关闭，重启还原)解决"
echo -e "  HOSTNAME=你的主机名"
echo -e "  OUTPUT=[y/n] 是否启用脚本 输出"
echo -e "  SLEEP=[y/n] 是否启用停顿，如果你嫌运行太快，可以开启此选项，每条输出后停顿0.3秒"
echo -e "  示例："
echo -e "  CHROOT_IMG=/data/example.img CHROOT_DIR=/data/example SELINUX=y HOSTNAME=Moe-hacker OUTPUT=y SLEEP=y"
echo -e "  上述配置即：容器镜像为/data/example.img 容器目录为/data/example 关闭SELinux 主机名为Moe-hacker 启用脚本输出 启用停顿"
echo -e "脚本用法:"
echo -e "  container:运行chroot容器"
echo -e "  container configure:配置chroot容器"
echo -e "  container unmount:解除系统挂载"
echo -e "  container update:更新此脚本"
echo -e "  container mount:只挂载镜像文件到挂载点而不运行chroot\033[0m"
