  echo -e "\033[${i4}G              \e[38;5;157mâ”‚ â”‚  \e[38;5;227mâ”‚ â”Œâ”€â”€â”€â”€â”€â”€â”€â” â”‚"
  echo -e "\033[${i4}G              \e[38;5;157mâ”‚ â”‚  \e[38;5;227mâ”‚ â”‚  \e[38;5;157mâ”‚ â”‚  \e[38;5;227mâ”‚ â”‚"
  echo -e "\033[${i4}G              \e[38;5;157mâ”‚ â””â”€â”€\e[38;5;227mâ”‚ â”‚\e[38;5;157mâ”€â”€â”˜ â”‚  \e[38;5;227mâ”‚ â”‚"
  echo -e "\033[${i4}G              \e[38;5;157mâ””â”€â”€â”€â”€\e[38;5;227mâ”‚ â”‚\e[38;5;157mâ”€â”€â”€â”€â”˜  \e[38;5;227mâ”‚ â”‚"
  echo -e "\033[${i4}G                   \e[38;5;227mâ”‚ â””â”€â”€â”€â”€â”€â”€â”€â”˜ â”‚"
  echo -e "\033[${i4}G                   \e[38;5;227mâ””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜"
  echo -e "\033[${i4}G\e[38;5;153mâ•â•”â•â•”â•â•â•”â•â•‘â•”â•” â•‘ â•‘â•‘ â•‘  â•”â•â•â•”â•â•‘â•”â• â•â•”â•â•”â•â•‘â•â•”â• â•”â•â•â•”â•â•‘"
  echo -e "\033[${i4}G â•‘ â•”â•â•â•”â•”â•â•‘â•‘â•‘â•‘ â•‘ â• â•â•â•‘  â•‘ â•‘â•‘ â•‘ â•‘ â•”â•â•‘â•‘â•‘ â•‘â•”â•â•â•”â•”â•"
  echo -e "\033[${i4}G â• â•â•â•â• â•â•â•â•â•â•â•â• â•  â•â•â•â•â•â•â• â• â• â• â•â•â• â•â•â•â•â• â•"
  i2=0
  while (( $i2<=$i1 ));do
      i2=$(($i2+1))
      echo -e "\e[38;5;159m\033[13H\033[${i2}G="
      sleep 0.01s
  done
  i5=$(($i4+9))
  echo -e "\033[${i5}G\e[38;5;159mMADE WITH ï‚Š BY MOE-HACKER"|pv -qL 20
  echo -e "\033[${i5}G\e[38;5;159m    KEEP MOE KEEP COOL"|pv -qL 20
