  do
    read -p "[ï’œ] MOUNT /sdcard ?[y/n]: " MOUNT_SDCARD
    if [[ ${MOUNT_SDCARD} = "n" || ${MOUNT_SDCARD} = "y" ]];then
      break
    fi
  done
