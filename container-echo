  echo -e "\033[\033[38;5;123m                    │:MMMM-MMMMMMMMMMMMMMMMMMMM-MMMM:│  │\033[0m"
  echo -e "\033[\033[38;5;123m                    │:MMMM-MMMMMMMMMMMMMMMMMMMM-MMMM:│  │\033[0m"
  echo -e "\033[\033[38;5;123m                    │:MMMM-MMMMMMMMMMMMMMMMMMMM-MMMM:│  │\033[0m"
  echo -e "\033[\033[38;5;123m                    │:MMMM-MMMMMMMMMMMMMMMMMMMM-MMMM:│  │\033[0m"
  echo -e "\033[\033[38;5;123m                    │-MMMM-MMMMMMMMMMMMMMMMMMMM-MMMM-│  │\033[0m"
  echo -e "\033[\033[38;5;123m                    │ +yy+ MMMMMMMMMMMMMMMMMMMM +yy+ │  │\033[0m"
  echo -e "\033[\033[38;5;123m                    │      mMMMMMMMMMMMMMMMMMMm      │  │\033[0m"
  echo -e "\033[\033[38;5;123m                    │       /++MMMMh++hMMMM++/       │  │\033[0m"
  echo -e "\033[\033[38;5;123m                    │          MMMMo  oMMMM          │  │\033[0m"
  echo -e "\033[\033[38;5;123m                    │          MMMMo  oMMMM          │  │\033[0m"
  echo -e "\033[\033[38;5;123m                    │          oNMm-  -mMNs          │  │\033[0m"
  echo -e "\033[\033[38;5;123m                    │ ╔═║  ╔═   ╔═   ╔═║  ╔═║  ╝  ╔═ │  │\033[0m"
