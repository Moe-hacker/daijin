  echo -e "\033[46;37mUPDATING                                                              \033[0m"
  sleep 0.1s
  echo -e ""
  echo -e "\033[\033[38;5;123m//\033[0m"
  echo -e ""
  sleep 0.1s
}
MOUNT(){
sleep 0.1s
  echo -e ""
  echo -e "\033[\033[38;5;123m//\033[0m"
  echo -e ""
  sleep 0.1s
  echo -e "\033[46;37mMOUNTING                                                              \033[0m"
  sleep 0.1s
  echo -e ""
  echo -e "\033[\033[38;5;123m//\033[0m"
  echo -e ""
  sleep 0.1s
}
CONTAINER(){
  echo -e "\033[\033[38;5;123mLOADING"
  i2=0
  for i1 in {117,123,116,159,158,122} {122,158,159,116,123,117} {117,123,116,159,158,122} {122,158,159,116,123,117} {117,123,116,159,158,122} {122,158,159,116,123,117} {117,123,116,159,158,122} {122,158,159,116,123,117} {117,123,116,159,158,122} {122,158,159,116,123,117} {117,123,116,159,158,122} {122,158,159};do
    i2=$(($i2+1))
    echo -e "\033[2H\033[${i2}G\033[38;5;${i1}m/"
  sleep 0.03s
  done
  echo -e "\033[\033[38;5;123mTERMUX-CONTAINER\033[0m"
  sleep 0.1s
  echo -e "\033[\033[38;5;123mGPL-V3 LICENSE\033[0m"
  sleep 0.1s
  echo -e "\033[\033[38;5;123mNO WARRANTY\033[0m"
  sleep 0.1s
  echo -e ""
  echo -e "\033[\033[38;5;123m//\033[0m"
  echo -e ""
  sleep 0.1s
  echo -e "\033[38;5;123m<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<\033[0m"
  echo -e "\033[38;5;123m               ╔═╝  ╔═║  ╔═   ═╔╝  ╔═║  ╝  ╔═   ╔═╝  ╔═║              \033[0m"
  echo -e "\033[38;5;123m               ║    ║ ║  ║ ║   ║   ╔═║  ║  ║ ║  ╔═╝  ╔╔╝              \033[0m"
  echo -e "\033[38;5;123m               ══╝  ══╝  ╝ ╝   ╝   ╝ ╝  ╝  ╝ ╝  ══╝  ╝ ╝              \033[0m"
  echo -e "\033[38;5;123m>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>\033[0m"
  echo -e ""
  sleep 0.1s
  echo -e "\033[\033[38;5;123m//\033[0m"
  echo -e ""
  sleep 0.1s
  echo -e "\033[\033[38;5;123mKERNEL $(uname --kernel-release)\033[0m"
  sleep 0.1s
  echo -e "\033[\033[38;5;123mTIME $(date|awk '{print $4}')\033[0m"
  sleep 0.1s
  echo -e "\033[\033[38;5;123mHOST $(hostname)\033[0m"
  sleep 0.3s
  echo -e "\033[\033[38;5;123mANDROID $(neofetch |grep Android|awk '{print $3}')\033[0m"
  echo -e ""
