  echo -e ""
  sleep 0.1s
  echo -e "\033[\033[38;5;123m44 72 65 61 6d 2f 77 69 74 68 2f 6d 65 00 00 00 00 00 00 00 00 00 00\033[0m"
  sleep 0.1s
  echo -e "\033[\033[38;5;123m4b 65 65 70 2f 6d 6f 65 00 00 00 00 00 00 00 00 00 00 00 00 00 00 00\033[0m"
