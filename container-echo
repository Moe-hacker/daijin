#!/data/data/com.termux/files/usr/bin/bash
#########用于没用的开头输出#########
clear
UNMOUNT(){
  sleep 0.1s
  echo -e ""
  echo -e "\033[\033[38;5;123m//\033[0m"
  echo -e ""
  sleep 0.1s
  echo -e "\033[46;37mUNMOUNTING                                                            \033[0m"
  sleep 0.1s
  echo -e ""
  echo -e "\033[\033[38;5;123m//\033[0m"
  echo -e ""
  sleep 0.1s
}
CONFIGURE(){
sleep 0.1s
  echo -e ""
  echo -e "\033[\033[38;5;123m//\033[0m"
