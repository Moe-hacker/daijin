  echo -e "\033[\033[38;5;123m         │LINUX               o o o│\033[0m"
  echo -e "\033[\033[38;5;123m         │─────────────────────────│\033[0m"
  echo -e "\033[\033[38;5;123m         │CONTAINER                │\033[0m"
  echo -e "\033[\033[38;5;123m         │~# echo Hello-Word       │\033[0m"
  echo -e "\033[\033[38;5;123m         │Hello-Word┌────────────────────────────────┐\033[0m"
  echo -e "\033[\033[38;5;123m         │~#        │ANDROID                    o o o│──┐\033[0m"
  echo -e "\033[\033[38;5;123m         │          │────────────────────────────────│ o│\033[0m"
  echo -e "\033[\033[38;5;123m         │          │         o            o         │──│\033[0m"
  echo -e "\033[\033[38;5;123m         │          │          o          o          │  │\033[0m"
  echo -e "\033[\033[38;5;123m         └──────────│          +hydNNNNdyh+          │  │\033[0m"
  echo -e "\033[\033[38;5;123m                    │        +mMMMMMMMMMMMMm+        │  │\033[0m"
  echo -e "\033[\033[38;5;123m                    │       dMM::NMMMMMMN::MMd       │  │\033[0m"
  echo -e "\033[\033[38;5;123m                    │      hMMMMMMMMMMMMMMMMMMh      │  │\033[0m"
