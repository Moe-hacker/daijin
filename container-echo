  sleep 0.1s
  echo -e "\033[46;37mCONFIGURE                                                             \033[0m"
  sleep 0.1s
  echo -e ""
  echo -e "\033[\033[38;5;123m//\033[0m"
  echo -e ""
  sleep 0.1s
}
UPDATE(){
sleep 0.1s
  echo -e ""
  echo -e "\033[\033[38;5;123m//\033[0m"
  echo -e ""
